package APITesting;

import org.json.simple.JSONObject;
import org.testng.annotations.Test;
import static io.restassured.RestAssured.*;

public class TestonLocalAPI {
	
	//@Test
	public void get()
	{
		baseURI = "http://localhost:3000";
		given().get("/cars").then().statusCode(200).log().all();
	}
	
	@SuppressWarnings("unchecked")
	@Test
	public void post()
	{
		JSONObject request = new JSONObject();
		request.put("manufacturer","Peugeot");
		request.put("model", "2008Allure");
		request.put("vinnumber",810012);
		request.put("regionid", 1);
		
		
		baseURI = "http://localhost:3000";
		
		given().body(request.toJSONString()).when().post("/cars").then().statusCode(201).log().all();
		
		
		
	}
	
	
	@SuppressWarnings("unchecked")
	@Test
	public void put()
	{
		JSONObject request = new JSONObject();
		request.put("manufacturer","Toyota");
		request.put("model", "CorollaGrande");
		request.put("vinnumber",810012);
		request.put("regionid", 1);
		
		
		baseURI = "http://localhost:3000";
		
		given().body(request.toJSONString()).when().put("/cars/2").then().statusCode(200).log().all();
			
	}
	
	@SuppressWarnings("unchecked")
	@Test
	public void patch()
	{
		JSONObject request = new JSONObject();
		
		request.put("model", "CorollaAltisGrande");
		
		baseURI = "http://localhost:3000";
		
		given().body(request.toJSONString()).when().put("/cars/2").then().statusCode(200).log().all();
			
	}
	
}
